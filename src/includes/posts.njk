<div>
    {% for post in posts %}
        {% if not post.data.draft %}
            <div class="mb-8 border-dotted border-b pb-8 border-gray-300">
                <h2>
                    <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                </h2>

                <p class="excerpt">{{ post.data.excerpt }}</p>

                {% if post.data.tags.length > 1 %}
                <p class="tags my-3">
                {% endif %}
                {% for tag in post.data.tags %}
                    {%- if tag !== "post" -%}
                        <a class="tag {{ tag | replace('.', '') }}" href="{{ site.baseUrl }}tag/{{ tag }}">{{ tag }}</a>&nbsp;
                    {%- endif -%}
                {% endfor %}
                {% if post.data.tags.length > 1 %}
                </p>
                {% endif %}

                <p class="my-3">
                    <span class="text-sm created-date" datetime="{{ post.data.date }}">
                        {{ post.data.date | dateDisplay }}
                    </span>
                </p>
            </div>
        {% endif %}
    {% endfor %}
</div>
